<div class="container-wrapper">



    @foreach (var item in Model)
    {
        <div class="container">
            <div class="left">
                <img src="@Url.Content(item.BookImage)" />
            </div>
            <div class="right">
                <div class="name"> @Html.DisplayFor(modelItem => item.BookName)</div>
                <div class="author">@Html.DisplayFor(modelItem => item.BookAuthor)</div>
                <div class="price">Rs @Html.DisplayFor(modelItem => item.BookPrice)</div>
                <div class="description"> @Html.DisplayFor(modelItem => item.BookDescription)</div>
                <div class="language"> @Html.DisplayFor(modelItem => item.BookLanguage)</div>
                <div class="genre"> @Html.DisplayFor(modelItem => item.BookCategory)</div>
                <div class="material-icons"> @Html.ActionLink("shopping_cart", "Add_To_Cart", new { BookId = item.BookId })</div>
                <div class="material-icons">@Html.ActionLink("rate_review", "AddFeedBack", new { BookId = item.BookId })</div>
                <div class="material-icons"> @Html.ActionLink("feedback", "FeedBack", new { BookId = item.BookId })</div>
            </div>
        </div>








