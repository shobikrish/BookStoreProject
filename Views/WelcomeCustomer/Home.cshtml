        .container {
            display: flex;
            justify-content: space-between;
            margin: 20px;
            width: 500px;
            box-shadow: 0 3px 20px 0 rgb(0 0 0 / 12%);
            border-radius: 5px;
            padding: 10px;
            font-family: "Lato", -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, sans-serif, "Apple Color Emoji", "Segoe UI Emoji", "Segoe UI Symbol";
            font-size: 16px;
            transition: transform 3s ease 3s;
        }
        .description {
            height: 100px;
            overflow: hidden;
            text-overflow: ellipsis;
            transition: transform 3s ease 3s;
            cursor: pointer;
            text-align: justify;
            transition-duration: 6s;
        }
        a{
            text-decoration:none;
            color:black;
        }

        .description:hover {
            height: unset;
            transition-duration: 6s;
        }

        .container-wrapper{
            display:flex;
            flex-wrap:wrap;
        }

        .left {
            width: 35%;
        }

            .left img {
                width: 100%;
                height: 250px;
            }

        .right {
            width: 63%;
        }

            .right div {
                padding: 5px;
            }
        .name {
            font-weight: 600;
            font-size: 20px;
            color: MediumSeaGreen;
        }
    </style>
</head>

